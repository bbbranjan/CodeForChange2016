<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.bobbyranjan.ybsandroid.ViewMedicalHistoryFragment">
    <LinearLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <LinearLayout
            android:id="@+id/PatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/med_PatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="@string/med_PatientName"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rtwt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mr_rtwt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/PregHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TextView"
                android:inputType="none"
                android:text="@string/med_SubHeader1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pregFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mr_pregField1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_pregField2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_pregField3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/med_A"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_pregField4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:id="@+id/mr_inspectionResults"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_weight="11.85"
                android:ems="10"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/varFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mr_UK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_UK"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_Varices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_Varies"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/varFields1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mr_Oedema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_Oedema"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_WTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_BB_TB"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/varFields2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mr_TD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_TD"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_LILA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_Lila"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/varFields3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mr_NumVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_TotalVisits"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_SF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_SF"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/varFields4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mr_HPHT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_HPHT"
                android:inputType="none"/>
            <TextView
                android:id="@+id/mr_TP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/med_TP"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Complaints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mr_Complaints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="@string/med_Complaints"
                android:inputType="none"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mr_Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="@string/med_varField12"
                android:inputType="none"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_hospital_o"
            android:fontFamily="@string/sans_serif"
            android:gravity="center_vertical"
            android:text="@string/doctor_s_comments"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/DocCommentsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:orientation="vertical">
            <com.example.bobbyranjan.ybsandroid.ExpandableHeightListView
                android:id="@+id/docCommentsLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:focusable="false"
                android:scrollbars="none"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

